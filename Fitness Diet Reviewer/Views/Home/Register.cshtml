@using Fitness_Diet_Reviewer.ViewModels
<!-- Register.cshtml -->
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                @TempData["SuccessMessage"]
            </div>
        }
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Username" class="form-control" autocomplete="username" aria-required="true" placeholder="Your username here" />
                        <label asp-for="Username">Username</label>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="FirstName" class="form-control" aria-required="true" placeholder="Your firstname here" />
                        <label asp-for="FirstName">FirstName</label>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="LastName" class="form-control" aria-required="true" placeholder="Your lastname here" />
                        <label asp-for="LastName">LastName</label>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="Password">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                        <label asp-for="ConfirmPassword">Confirm Password</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Age" class="form-control" aria-required="true" placeholder="Your ages here" />
                        <label asp-for="Age">Ages</label>
                        <span asp-validation-for="Age" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Height" class="form-control" aria-required="true" placeholder="Your height here" />
                        <label asp-for="Height">Height</label>
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="form-floating">
                        <input asp-for="Weight" class="form-control" aria-required="true" placeholder="Your weight here" />
                        <label asp-for="Weight">Weight</label>
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <div class="form-floating">
                        <select class="form-select" asp-for="Gender" aria-required="true">
                            <option value="" selected disabled>Select Gender</option>
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                        </select>
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>
    </div>
</div>
