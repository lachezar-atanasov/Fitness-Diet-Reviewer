@model Fitness_Diet_Reviewer.Models.DailyMealRow

@{
    ViewData["Title"] = "Delete";
}

<h3 class="text-center">Are you sure you want to delete this?</h3>
<div class="text-center">
    <h4>@Model.Product.FoodName - @Model.AmountInGrams - @Model.DayOfWeek - @Model.EatTime</h4>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DailyMealRowId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
