@using Fitness_Diet_Reviewer.ViewModels
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Fitness_Diet_Reviewer.Models.RequestedFood
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Request food";
}
<h1 class="text-center">Request food to add to database</h1>
<hr />
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="RequestFood">
            <input type="hidden" asp-for="UserId" value="@(User.Identity.Name)" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                @ViewItems.CreateSearchBox("ProductId", "foodInput", "/Foods/Search", "Check food if already exists here")
            </div>
            <div class="form-group mb-3">
                <label asp-for="FoodName" class="control-label"></label>
                <input asp-for="FoodName" class="form-control" />
                <span asp-validation-for="FoodName" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Proteins" class="control-label"></label>
                <input asp-for="Proteins" class="form-control" />
                <span asp-validation-for="Proteins" class="text-danger"></span>
            </div>
            <div class="form-group  mb-3">
                <label asp-for="Carbohydrates" class="control-label"></label>
                <input asp-for="Carbohydrates" class="form-control" />
                <span asp-validation-for="Carbohydrates" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Fats" class="control-label"></label>
                <input asp-for="Fats" class="form-control" />
                <span asp-validation-for="Fats" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <button id="login-submit" type="submit" value="Save" class="w-100 btn btn-lg btn-primary">Request a food</button>
            </div>
        </form>
    </div>
</div>