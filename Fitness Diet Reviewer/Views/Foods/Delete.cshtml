@model Fitness_Diet_Reviewer.Models.Food

@{
    ViewData["Title"] = "Delete";
}

    <h3 class="text-center">Are you sure you want to delete this?</h3>
    <div class="text-center">
    <h4>Foodname: @Model.FoodName</h4>
    <h4>Carbohydrates: @Model.Carbohydrates ; Proteins: @Model.Proteins; Fats: @Model.Fats</h4>

